<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/tx
http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
http://www.springframework.org/schema/aop
http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="java:/comp/env/jdbc/eLookDB" />
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate5.LocalSessionFactoryBean"
		destroy-method="destroy">
		<property name="dataSource" ref="dataSource" />
		<property name="mappingResources">
			<list>
				<value>com/e_Look/ad/Ad.hbm.xml</value>
				<value>com/e_Look/backStage/login/model/Manager.hbm.xml</value>
				<value>com/e_Look/buyCourse/model/BuyCourse.hbm.xml</value>
				<value>com/e_Look/Course/Course.hbm.xml</value>
				<value>com/e_Look/courseClass/CourseClass.hbm.xml</value>
				<value>com/e_Look/CourseClassDetails/CourseClassDetails.hbm.xml</value>
				<value>com/e_Look/eLookEvent/eLookEvent.hbm.xml</value>
				<value>com/e_Look/member/model/Member.hbm.xml</value>
				<value>com/e_Look/memberBookmarks/model/MemberBookmarks.hbm.xml
				</value>
				<value>com/e_Look/memberSubscription/MemberSubscription.hbm.xml
				</value>
				<value>com/e_Look/message/model/Message.hbm.xml</value>
				<value>com/e_Look/Order/model/Order.hbm.xml</value>
				<!-- <value>com/e_Look/OrderDetails/model/OrderDetails.hbm.xml</value> -->
				<!-- <value>com/e_Look/ReportCourse/model/ReportCourse.hbm.xml</value> -->
				<value>com/e_Look/reportMessage/model/ReportMessage.hbm.xml</value>
				<value>com/e_Look/search/Search.hbm.xml</value>
				<!-- <value>com/e_Look/shoppingCart/model/jdbc/ShoppingCart.hbm.xml</value> -->
				<value>com/e_Look/sponsor/model/Sponsor.hbm.xml</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</prop>
				<prop key="hibernate.show_sql">false</prop>
				<prop key="hibernate.cache.provider_class">org.hibernate.cache.NoCacheProvider</prop>
				<prop key="hibernate.transaction.coordinator_class">jdbc</prop>
				<prop key="hibernate.current_session_context_class">org.springframework.orm.hibernate5.SpringSessionContext
				</prop>
			</props>
		</property>
	</bean>

	<bean id="hibernateTemplate" class="org.springframework.orm.hibernate5.HibernateTemplate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>


	<!-- adDAO -->
	<bean id="adDAO" class="com.e_Look.ad.AdDAO">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>

	<!-- memeberDAO -->
	<bean id="memberDAO" class="com.e_Look.member.model.MemberDAO">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>

	<!-- managerDAO -->
	<bean id="managerDAO" class="com.e_Look.backStage.login.model.ManagerDAO">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>

	<!-- buyCourseDAO -->
	<bean id="buyCourseDAO" class="com.e_Look.buyCourse.model.BuyCourseDAO">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>

	<!-- courseDAO -->
	<bean id="courseDAO" class="com.e_Look.Course.CourseDAO">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>

	<!-- courseClassDAO -->
	<bean id="courseClassDAO" class="com.e_Look.courseClass.CourseClassDAO">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>
	<!-- courseClassDetailsDAO -->
	<bean id="courseClassDetailsDAO" class="com.e_Look.CourseClassDetails.CourseClassDetailsDAO">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>

	

	<!-- searchDAO -->
	<bean id="searchDAO" class="com.e_Look.search.SearchDAO">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>
	



	<!-- sponsorDAO -->
	<bean id="sponsorDAO"
		class="com.e_Look.sponsor.model.SponsorDAO">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>

	<!-- MemberBookmarksDAO -->
	<bean id="MemberBookmarksDAO" class="com.e_Look.memberBookmarks.model.MemberBookmarksDAO">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>



	<!-- eLookEventDAO -->
	<bean id="eLookEventDAO" class="com.e_Look.eLookEvent.eLookEventDAO">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>

	<!-- MessageDAO -->
	<bean id="MessageDAO" class="com.e_Look.message.model.MessageDAO">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>


	<!-- <bean id="shoppingCartDAO" class="com.e_Look.shoppingCart.model.spring.ShoppingCartDAO"> -->
	<!-- <property name="hibernateTemplate" ref="hibernateTemplate"/> -->
	<!-- </bean> -->

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate5.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	

	<tx:annotation-driven transaction-manager="transactionManager" />


</beans>
